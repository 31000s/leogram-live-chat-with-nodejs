<div class="auth-body">
   <div class="auth-box">
    <div class="auth-form">
        <h2>KAYIT</h2>
        <form action="/accounts/register" method="POST" novalidate>
            <h4 for="username-text">Kullanıcı Adınız: </h4>
            <input type="text" name="username">
            <h4 for="email-text">Email: </h4>
            <input type="email" name="email">

            <h4 for="password-text">Parola: </h4>
            <input type="password" name="password">

            <h4 for="password-text">Parolayı Onaylayın: </h4>
            <input type="password" name="passwordConfirm">

            <button type="submit">Kayıt Ol</button>
        </form>
    </div>
   </div>
</div>