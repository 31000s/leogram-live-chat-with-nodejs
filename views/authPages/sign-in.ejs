<div class="auth-body">
   <div class="auth-box">
    <div class="auth-form">
        <h2>KAYIT</h2>
        <form action="/accounts/register" method="POST" novalidate>
            <h4 for="name-text">Adınız: </h4>
            <input type="text" name="name" id="name">

            <h4 for="username-text">Kullanıcı Adınız: </h4>
            <input type="text" name="username" id="username">
            <h4 for="email-text">Email: </h4>
            <input type="email" name="email" id="email">

            <h4 for="password-text">Parola: </h4>
            <input type="password" name="password" id="password">

            <button type="submit">Kayıt Ol</button>
        </form>
    </div>
   </div>
</div>